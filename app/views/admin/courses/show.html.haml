%h1= @course.title
%p Description: #{@course.description}
%p Duration: #{@course.duration}
%p Price: #{@course.price}
= link_to "Edit info", edit_admin_course_path(@course)
= link_to "Add lesson", new_admin_course_lesson_path(@course)
= link_to "Add quizz", "#"
= link_to 'Delete', admin_course_path(@course), data: { confirm: "Are you sure?" }, method: :delete, class: "button alert"

%ul
  - @course.lessons.each do |lesson|
    %li= link_to "#{lesson.title}", admin_course_lesson_path(@course, lesson)
    = link_to "Edit lesson", edit_admin_course_lesson_path(@course, lesson)
    = link_to "Delete lesson", admin_course_lesson_path(@course, lesson), id: "delete_button", data: { confirm: "Are you sure?" }, method: :delete 
